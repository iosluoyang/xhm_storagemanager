// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"description":"心愿单表   当用户支付完成之后心愿单完成，转换为订单",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"creatTime": {
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"creatUid": {
			"bsonType":"string",
			"description":"创建心愿用户uid, 关联用户表_id",
			"foreignKey":"uni-id-users._id",
			"forceDefaultValue": {
				"$env": "uid"
			} // 强制设置creatUid的值为当前登录用户的id
		},
		"agentUid": {
			"bsonType": "string",
			"description": "代理员的uid",
			"foreignKey": "uni-id-users._id" // 使用foreignKey表示，此字段关联uni-id-users表的_id
		},
		"updateTime": {
			"description":"操作时间",
			"bsonType":"timestamp",
			"defaultValue": {
				"$env":"now"
			}
		},
		"status": {
			"bsonType": "int",
			"description": "心愿单状态", // 0 未代理  1已代理待报价  2 已报价待确认  3 已确认待支付  4 已支付已完成  90 已关闭
			"defaultValue": 0,
			"enum": [
				0, // 未代理
				1, // 已代理待报价
				2, // 已报价待确认
				3, // 已确认待支付
				4, // 已支付已完成
				90 // 已关闭
			]
		},
		"productList": {
			"bsonType":"array",
			"description":"心愿单对应的商品列表快照数据,其中每条数据都为心愿草稿箱中的数据格式"
		},
		"quotationInfo": {
			"bsonType":"object",
			"description":"心愿单报价内容",
			"properties": {
				"totalProPrice": {
					"bsonType":"string",
					"description":"总商品价格",
					"defaultValue":""
				},
				"totalShippingFee": {
					"bsonType":"string",
					"description":"总运费",
					"defaultValue":""
				},
				"totalCommissionFee": {
					"bsonType":"string",
					"description":"总服务费",
					"defaultValue":""
				}
			}
		},
		"warehouseId": {
			"bsonType":"string",
			"description":"该心愿对应的转运仓数据id",
			"foreignKey":"warehouse._id",
			"defaultValue":""
		}
	}
}
// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"description":"心愿表",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"creatTime": {
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"creatUid": {
			"bsonType":"string",
			"description":"创建心愿用户uid, 关联用户表_id",
			"foreignKey":"uni-id-users._id",
			"forceDefaultValue": {
				"$env": "uid"
			} // 强制设置creatUid的值为当前登录用户的id
		},
		"agentFlag": {
			"bsonType": "int",
			"description": "是否已经关联代理人的标识",
			"defaultValue": 0 // 默认没有关联
		},
		"agentUid": {
			"bsonType": "string",
			"description": "代理员的uid",
			"foreignKey": "uni-id-users._id" // 使用foreignKey表示，此字段关联uni-id-users表的_id
		},
		"optionTime": {
			"description":"操作时间",
			"bsonType":"timestamp",
			"defaultValue":""
		},
		"status": {
			"bsonType": "int",
			"description": "心愿单状态",
			"defaultValue": 0,
			"enum": [
				0, // 未代理
				1, // 已代理待报价
				2, // 已报价待确认
				3, // 已确认待支付
				4, // 已支付待下单
				5, // 已下单待发货
				6, // 已发货待收货
				7, // 已收货待评价
				8, // 已评价已完成
				98, // 已退款
				99 // 已关闭
			]
		},
		"productList": {
			"bsonType":"array",
			"description":"心愿单对应的商品列表,其中每条数据都为心愿草稿箱中的数据格式"
		},
		"warehouse": {
			"bsonType":"object",
			"description":"该心愿对应的仓库信息",
			"properties": {
				"company": {
					"bsonType":"string",
					"description":"物流公司名称",
					"defaultValue":""
				},
				"city": {
					"bsonType":"string",
					"description":"仓库所在城市",
					"defaultValue":""
				},
				"shippingWay": {
					"bsonType":"string",
					"description":"物流方式  sea海运 car陆运",
					"defaultValue":""
				},
				"price": {
					"bsonType":"string",
					"description":"物流价格",
					"defaultValue":""
				},
				"shippingCode": {
					"bsonType":"string",
					"description":"仓库代码",
					"defaultValue":""
				}
			}
		}
	}
}
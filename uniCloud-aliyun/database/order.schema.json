// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"creatTime": {
			"description": "创建时间 也即下单时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"payTime": {
			"bsonType": "timestamp",
			"description": "付款时间",
			"defaultValue": ""
		},
		"payType": {
			"bsonType": "string",
			"description": "支付方式",
			"defaultValue": ""
		},
		"payImgs": {
			"bsonType": "string",
			"description": "付款凭证图片",
			"defaultValue": ""
		},
		"deliveryTime": {
			"bsonType": "timestamp",
			"description": "发货时间",
			"defaultValue": ""
		},
		"deliveryType": {
			"bsonType":"int",
			"description": "物流方式 0无物流发货 1物流发货"
		},
		"deliveryInfo": {
			"bsonType":"object",
			"description":"订单物流相关信息",
			"properties": {
				"domesticShippingName": {
					"bsonType":"string",
					"description":"发货国内快递名称"
				},
				"domesticShippingNum": {
					"bsonType":"string",
					"description":"发货国内快递单号 多个逗号拼接"
				},
				"remark": {
					"bsonType":"string",
					"description":"发货备注",
					"defaultValue":""
				},
				"imgs": {
					"bsonType":"string",
					"description":"发货图片集合  多个逗号拼接",
					"defaultValue":""
				}
			}
		},
		"receiveTime": {
			"bsonType": "timestamp",
			"description": "收货时间",
			"defaultValue": ""
		},
		"receiveType": {
			"bsonType":"int",
			"description":"订单商品收货状态 0未收货 1部分收货 2全部收货",
			"defaultValue": 0
		},
		"receiveInfo": {
			"bsonType":"object",
			"description":"订单收货相关信息",
			"properties": {
				"domesticShippingNum": {
					"bsonType":"string",
					"description":"收货国内快递单号 多个逗号拼接, 部分收货或全部收货使用"
				},
				"remark": {
					"bsonType":"string",
					"description":"收货备注",
					"defaultValue":"全部收货时使用"
				},
				"imgs": {
					"bsonType":"string",
					"description":"收货图片集合",
					"defaultValue":"全部收货时使用"
				},
				"partReceiveRecordArr" : {
					"bsonType":"array",
					"description":"部分收货时收货信息",
					"defaultValue": [],
					"properties": {
						"creatTime": {
							"bsonType":"timestamp",
							"description":"创建时间",
							"defaultValue":""
						},
						"creatUser": {
							"bsonType": "string",
							"description": "发布者的uid",
							"foreignKey": "uni-id-users._id" // 使用foreignKey表示，此字段关联uni-id-users表的_id
						},
						"content": {
							"bsonType":"string",
							"description":"发布的内容",
							"defaultValue":""
						},
						"imgs": {
							"bsonType":"string",
							"description":"发布的图片集合 用逗号分割",
							"defaultValue":""
						},
						"domesticShippingNum": {
							"bsonType":"string",
							"description":"本次收货国内快递单号 多个逗号拼接"
						}
					}
				}
			}
		},
		"creatUser": {
			"bsonType": "string",
			"description": "发布者的uid",
			"foreignKey": "uni-id-users._id" // 使用foreignKey表示，此字段关联uni-id-users表的_id
		},
		"agentUser": {
			"bsonType": "string",
			"description": "代理员的uid",
			"foreignKey": "uni-id-users._id" // 使用foreignKey表示，此字段关联uni-id-users表的_id
		},
		"status": {
			"bsonType": "int",
			"description": "订单状态  0已下单待付款 1已付款待发货 2已发货待收货 3已收货完成"
		},
		"wishId": {
			"bsonType": "string",
			"description": "心愿id" // 此处不能做外键关联 所以需要单独查询一次
		},
		"title": {
			"bsonType": "string",
			"description": "订单标题",
			"defaultValue": ""
		},
		"totalProPrice": {
			"bsonType": "string",
			"description": "商品总金额",
			"defaultValue": ""
		},
		"totalCommissionFee": {
			"bsonType": "string",
			"description": "服务费总金额",
			"defaultValue": ""
		},
		"totalDomesticShippingFee": {
			"bsonType": "string",
			"description": "国内运费总金额",
			"defaultValue": ""
		},
		"totalOrderPrice": {
			"bsonType": "string",
			"description": "订单总价",
			"defaultValue": ""
		},
		"thirdPlatformType": {
			"bsonType": "string",
			"description": "第三方平台类型",
			"enum": [
				"pro-1688",
				"pro-taobao",
				"pro-shopee"
			],
			"defaultValue": "pro-1688"

		},
		"thirdOrderNum": {
			"bsonType": "string",
			"description": "第三方订单号",
			"defaultValue": ""
		},
		"thirdOrderImgs": {
			"bsonType":"string",
			"description":"第三方订单图片",
			"defaultValue":""
		}

	}
}

// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"description":"心愿单列表数据表",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"creatUser": {
			"description": "发布者的uid",
			"foreignKey": "uni-id-users._id", // 使用foreignKey表示，此字段关联uni-id-users表的_id
			"forceDefaultValue":{
				"$env":"uid"
			} // 强制设置creatUid的值为当前登录用户的id
		},
		"productTitle": {
			"description": "商品标题"
		},
		"sourceLink": {
			"description": "原网址链接"
		},
		"sourcePrice": {
			"description": "原商品价格"
		},
		"sourceMoneyType": {
			"description": "原商品价格类型"
		},
		"targetPrice": {
			"description": "目标价格"
		},
		"targetMoneyType": {
			"description": "目标价格类型"
		},
		"targetAmount": {
			"description": "目标数量"
		},
		"hurryLevel": {
			"description": "紧急程度 1 2 3 4 5"
		},
		"remark": {
			"description": "备注"
		},
		"imgs": {
			"description": "图片字符串 逗号拼接"
		},
		"achieveFlag": {
			"description": "心愿单完成标识 0进行中 1待确认 2待下单 3已完成 4已关闭"
		},
		"creatTime": {
			"description": "创建时间",
			"forceDefaultValue": {
			  "$env": "now"
			}
		}
	}
}
